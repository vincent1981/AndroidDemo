<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/show_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#80000000"
            android:enabled="false"
            android:inputType="number"
            android:text="0"
            android:textSize="50sp"
            android:paddingRight="10dp"
            android:gravity="center_vertical|right"
            android:textColor="#ffffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_1"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_3"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_ac"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="AC"
                        android:textSize="40sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_4"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_5"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="6"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_sub"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="50sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_7"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="7"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_8"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_9"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="9"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_add"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="50sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_num_0"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="240dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_bt"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="50sp"
                        android:onClick="numberBtnLister"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_equal"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_textview"
                        android:gravity="center"
                        android:text="="
                        android:textSize="50sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>